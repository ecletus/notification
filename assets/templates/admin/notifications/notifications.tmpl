{{$messages := .Result.Messages}}

<div class="qor-form-container qor-notifications" data-slideout-type="mini" data-toggle="qor.action.bulk">
  {{range $message := $messages.Notifications}}
    {{render "notifications/notification" $message}}
  {{end}}

  {{if $messages.Resolved}}
    <h6 class="qor-notifications--archived">{{t "github_com:aghape:notification.hints.archived_notifications" "Archived Notifications"}}</h6>
    {{range $message := $messages.Resolved}}
      {{render "notifications/notification" $message}}
    {{end}}
  {{end}}

  {{$notification_url := (url "!notifications")}}
  <a class="qor-notification__load-more" data-loading="{{t "github_com:aghape:notification.hints.loading" "LOADING..."}}" href="{{patch_url $notification_url "page" .Result.LoadMoreNextPage}}">{{t "github_com:aghape:notification.hints.load_more" "LOAD MORE..."}}</a>
</div>
